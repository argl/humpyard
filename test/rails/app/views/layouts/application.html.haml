!!! Strict
%html
  %head
    =render :partial => 'humpyard/common/head'
    = stylesheet_link_tag 'smoothness/jquery-ui-1.8.custom.css'
    = javascript_include_tag 'jquery-1.4.2.min'
    = javascript_include_tag 'jquery-ui-1.8.custom.min'
    = javascript_include_tag 'rails'
    = javascript_include_tag 'humpyard'
    = csrf_meta_tag
  - page_body do
    .container
      #header.span-24{"class"=>"last"}
        %h1
          = @content_for_title
      #content.span-16	
        = yield
      #sidebar.span-8{"class"=>"last"}
        %p
          %a{"href"=>"http://humpyard.org/"}
            Visit the Humpyard Homepage
      #footer.span-24{"class"=>"last"}
        %p
          This is just a template
