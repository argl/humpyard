- if humpyard_user == 'admin'
  %body.hy-logged-in
    #hy-top.hy-eb
      #hy-top-left
        =link_to 'Edit', '#', :'data-command' => "toggleEditMode", :'data-icon' => "ui-icon-pencil"
        =link_to 'Pages', '#', :'data-dialog' => "size:800x700;", :'data-icon' => "ui-icon-document"
        =image_tag "ajax-loader.gif", :size => "16x16", :class => "ajax-indicator ui-widget ui-widget-content ui-corner-all"
      #hy-top-right
        =link_to 'Logout', '?user='
    #hy-bottom.hy-eb
      - Humpyard::config.elements.each do |name, type|
        .element{'data-addable'=>'true', 'data-draggable'=>'true', 'data-element-type'=>name, 'data-create-url'=>new_humpyard_element_path}
          = name
    #hy-body.hy-eb
      = capture_haml(&block)
- else
  %body
    #hy-body
      = capture_haml(&block)