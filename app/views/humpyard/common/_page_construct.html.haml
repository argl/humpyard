- if humpyard_user == 'admin'
  %body.hy-logged-in
    #hy-top.hy-eb
      #hy-top-left
        =image_tag "ajax-loader.gif", :size => "16x16", :class => "ajax-indicator"
        =link_to 'Edit', '#', :'data-command' => "toggleEditMode", :'data-icon' => "ui-icon-pencil"
        =link_to 'Pages', humpyard_pages_path(:actual_id => @page ? @page.id : nil), :'data-dialog' => "size:800x700;dialog_id:pages-dialog", :'data-icon' => "ui-icon-document"
        =link_to 'News', humpyard_news_feeds_path, :'data-dialog' => "size:800x600;dialog_id:news-dialog", :'data-icon' => "ui-icon-signal-diag"
      #hy-top-right
        =link_to 'Logout', '?user='
    #hy-bottom.hy-eb
      - Humpyard::config.element_types.each do |name, type|
        .element{'data-addable'=>'true', 'data-draggable'=>'true', 'data-element-type'=>name, 'data-create-url'=>new_humpyard_element_path}
          = name
    #hy-body.hy-eb
      = capture_haml(&block)
- else
  %body
    #hy-body
      = capture_haml(&block)