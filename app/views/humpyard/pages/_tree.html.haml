.humpyard-treeview{:'data-sortable-update-url'=> move_humpyard_pages_path}
  - root_page = Humpyard::Page.root_page
  - if root_page
    %ul
      %li.treeitem{:'data-page-id' => root_page.id, :id => "hy-page-treeview-id-#{root_page.id}"}
        = link_to root_page.title, edit_humpyard_page_path(root_page), :'data-dialog-link' => true, :class => (page and page == root_page ? 'active' : ''), :id => "hy-page-dialog-item-#{root_page.id}"
        = render :partial => 'subtree.html', :locals => {:pages => root_page.children, :root_page => root_page} 
      - root_page.siblings.each do |page|
        %li.treeitem{:'data-page-id' => page.id, :id => "hy-page-treeview-id-#{page.id}"}
          = link_to page.title, edit_humpyard_page_path(page), :'data-dialog-link' => true, :class => (@page and @page==page ? 'active' : ''), :id => "hy-page-dialog-item-#{page.id}"
          = render :partial => 'subtree.html', :locals => {:pages => page.content_data.child_pages, :root_page => @root_page}
      
    
    
