= humpyard_form_for @page, :as => :page, :url => url_for(:controller=>:'humpyard/pages', :action=>@page.id ? :update : :create), :html=>{:remote => true, :'data-form-object-class' => "page", :class=>'page_form humpyard_form'} do |form|
  .humpyard-dialog-title
    = @page.class
  - unless @page.id
    = hidden_field :page, :parent_id
    - if @prev
      = hidden_field_tag :prev_id, @prev.id 
    - if @next
      = hidden_field_tag :next_id, @next.id
  .humpyard-tab
    .humpyard-tab-title
      Generic Options
    = form.input :display_from
    = form.input :display_until
  .humpyard-dialog-buttons  
    = form.submit