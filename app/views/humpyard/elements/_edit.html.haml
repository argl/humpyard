= humpyard_form_for @element, :as => :element, :url => humpyard_element_path, :html=>{:remote => true, :'data-form-object-class' => "element", :class=>'element_form humpyard_form'} do |form|
  .humpyard-dialog-title
    = @element.class
  .humpyard-tabview
    = render :partial => "/humpyard/elements/#{@element.class.name.split('::').last.underscore.pluralize}/edit", :locals => {:element => @element, :form => form}
    .humpyard-tab
      .humpyard-tab-title
        Generic Options
      = form.input :display_from
      = form.input :display_until
  .humpyard-dialog-buttons  
    = form.submit

